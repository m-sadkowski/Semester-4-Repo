<Window x:Class="WpfApp.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressWindow" Height="150" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="MessageTextBlock" Text="Obliczanie..." Margin="10" TextAlignment="Center"/>
            <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="20" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
   